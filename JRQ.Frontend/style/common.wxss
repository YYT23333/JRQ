view {
  box-sizing: border-box;
}
text {
  color: #5e645a;
}
.header {
  padding: 10px;
  width: 100%;
}
.jrq__block {
  box-shadow: 0 5px 20px #e0e0e0;
  border-radius: 10px;
  background-color: #f7f1e5;
}
.jrq__words, .jrq__words--style-heavy {
  font-family: HYYaKuHeiW;
  color: #b98c49;
  font-weight: bold;
  font-size: 0.8rem;
}
.jrq__words--style-light {
  color: #927912;
  font-weight: normal;
}
.jrq__button {
  background-color: #c78f21;
  color: #ffffff;
  border-radius: 5px;
  box-shadow: 0 0 10px #808080;
}
.jrq__button--color-red {
  color: #FFF;
  background-color: #D62F36;
}
/*CSS 小圆点*/
.dot {
  width: 4px;
  height: 4px;
  background: #000;
  border-radius: 50%;
  margin: 5px;
}
/* CSS箭头*/
.arrow {
  content: " ";
  height: 6px;
  width: 6px;
  border-width: 2px 2px 0 0;
  border-color: #a1a2a2;
  border-style: solid;
  transform: rotate(45deg);
  margin-top: -4px;
  top: 50%;
  right: 22px;
}
.div-line{
  background: #E0E3DA;
  width: 100%;
  height: 1px;
  margin: 5px 0;
}
.container {
  margin: 0;
  padding: 0;
  border: 0;
}
.container--color-gray {
  background-color: #efefef;
}
.container--color-white {
  background-color: #FFF;
}
.module {
  margin: 10px;
}
.h-center {
  display: flex;
  justify-content: center;
}
.v-center {
  display: flex;
  align-items: center;
}
.row {
  display: flex;
  flex-direction: row;
}
.column {
  display: flex;
  flex-direction: column;
}