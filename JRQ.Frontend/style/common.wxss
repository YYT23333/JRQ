view {
  box-sizing: border-box;
}
text {
  color: gray;
}
button.jrq__button {
  background-color: #243264;
  color: #FFF;
}
.dot {
  width: 3px;
  height: 3px;
  background: #000;
  border-radius: 50%;
  margin: 5px;
}
.div-line{
  background: #E0E3DA;
  width: 100%;
  height: 1px;
  margin: 5px 0;
}
.container {
  margin: 0;
  padding: 0;
  border: 0;
}
.container--color-gray {
  background-color: #efefef;
}
.container--color-white {
  background-color: #FFF;
}
.module {
  margin: 10px;
}
.h-center {
  display: flex;
  justify-content: center;
}
.v-center {
  display: flex;
  align-items: center;
}
.row {
  display: flex;
  flex-direction: row;
}
.column {
  display: flex;
  flex-direction: column;
}