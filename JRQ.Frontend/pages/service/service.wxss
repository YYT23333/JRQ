/* pages/service/service.wxss */
@import '/style/common.wxss';
@import '/template/searchBar/searchBar.wxss';
@import '/template/adBar/adBar.wxss';

/*本页面css属性*/

/*关于头部导航栏的属性*/

.head {
  width: 80%;
  display: flex;
  justify-content: space-around;
}

.head image {
  width: 35px;
  height: 35px;
}

.head text {
  font-size: 0.8rem;
}

.content {
  margin: 10px 0 0 0;
  width: 100%;
  min-height: 500px;
  text-align: center;
}

.module:active {
  background-color: #f0f0f0;
}

/*关于业务卡片的属性*/

.cardWrapper {
  display: flex;
  justify-content: space-between;
  margin: 10px;
  min-height: 80px;
  box-shadow: 0 0 20px #D0D0D0;
  border-radius: 10px;
}

.card__main {
  width: 85%;
  display: flex;
  align-items: center;
  padding: 5px 0 5px 5px;
  background-color: white;
  border-radius: 10px 0 0 10px;
}

.card__face {
  width: 50px;
  height: 50px;
  border-radius: 5px;
}

.card__info {
  width: 80%;
  margin: 5px;
}

.card__title {
  display: block;
  text-align: left;
}

.card__username {
  display: inline-block;
  max-width: 9rem;
  font-size: 0.8rem;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.card__position{
  display: inline-block;
  margin: 0 0 0 5px;
  font-size: 0.5rem;
  color: gray;
  max-width: 7rem;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.card__city, .card__company {
  display: inline;
  margin: 0 5px 0 0;
}

.card__category {
  width: 15%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 0.5rem;
  border-radius: 0 10px 10px 0;
  padding: 5px;
}

.card__category text {
  font-size: 0.8rem;
  color: white;
}

.card__intro {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  text-align: left;
  font-size: 0.5rem;
}
