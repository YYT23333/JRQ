/* pages/service/service.wxss */
@import '/style/common.wxss';
@import '/template/searchBar/searchBar.wxss';
@import '/template/adBar/adBar.wxss';

/*本页面css属性*/
/*关于头部导航栏的属性*/
.head {
  width: 80%;
  display: flex;
  justify-content: space-around;
}
.head image {
  width: 35px;
  height: 35px;
}
.head text {
  font-size: 0.8rem;
}
.content {
  margin: 10px 0 0 0;
  width: 100%;
  background-color: #f5f5f5;
}
/*关于业务卡片的属性*/
.card {
  margin: 10px;
  border-radius: 10%;
}
.card-main {
  vertical-align: flex-start;
  width: 87.5%;
  padding: 10px 0 10px 10px;
  background-color: white;
  border-radius: 5px 0 0 5px;
}
.card-face > image {
  width: 50px;
  height: 50px;
  border-radius: 5px;
}
.card-info {
  padding: 0 10px;
}
.card-info text {
  padding: 0 3px;
}
.card-category {
  vertical-align: flex-end;
  width: 12.5%;
  font-size: 0.5rem;
  border-radius: 0 5px 5px 0;
}
.card-category text {
  width: 0.65rem;
  font-size: 0.65rem;
  color: white;
}
