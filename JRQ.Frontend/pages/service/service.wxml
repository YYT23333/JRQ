<!--pages/service/service.wxml-->
<view class='container'>
  <view class='head'>
    <view class='module column' bindtap='showCapitalClass'>
      <view class='h-center'>
        <image src='img/capital.png'></image>
      </view>
      <view class='h-center'>
        <text>资金类</text>
      </view>
    </view>
    <view class='module column' bindtap='showStockClass'>
      <view class='h-center'>
        <image src='img/stock.png'></image>
      </view>
      <view class='h-center'>
        <text>股票类</text>
      </view>
    </view>
    <view class='module column' bindtap='showMergeClass'>
      <view class='h-center'>
        <image src='img/merge.png'></image>
      </view>
      <view class='h-center'>
        <text>并购类</text>
      </view>
    </view>
  </view>
  <view class='content'>

    <view wx:for='{{cards}}' wx:key='openid'>

      <view class='card row' bindtap='onClickThisCard' data-id='{{item.openid}}'>
        <view class='card-main row'>
          <view class='card-face v-center'>
            <image src='{{item.face}}'></image>
          </view>
          <view class='card-info column'>
            <view class='row'>
              <text style='font-size: 0.8rem;'>{{item.username}}</text>
              <text class='v-center' style='font-size: 0.5rem; color: gray;'>{{item.position}}</text>
            </view>
            <view class='row' style='font-size: 0.5rem;'>
              <text style='color: gray;'>{{item.city}}</text>
              <text style='color: gray;'>{{item.company}}</text>
            </view>
            <view class='div-line'></view>
            <view class='detail' style='font-size: 0.5rem'>
              <text>{{item.intro}}</text>
            </view>
          </view>
        </view>
        <view class='card-category v-center h-center' style='background-color:{{item.bgColor}}'>
          <text>{{item.label}}</text>
        </view>
      </view>

    </view>

  </view>
</view>