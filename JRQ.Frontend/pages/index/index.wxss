/**index.wxss**/
@import '/style/common.wxss';
/*本页面css属性*/
/*关于头部导航栏的属性*/
.head {
  width: 60%;
  display: flex;
  justify-content: space-around;
}
.head image {
  width: 35px;
  height: 35px;
}
.head text {
  font-size: 15px;
}
/*关于广告栏的属性*/
.ad {
  width: 90%;
}
.ad > image {
  width: 100%;
  height: 120px;
  margin: 3px;
}
/*关于文章的属性*/
.article-images > image {
  width: 33%;
  height: 100px;
  margin: 2px;
}
.article-text {
  font-size: 14px;
  margin: 10px 0;
}
.article-info {
  width: 100%;
  justify-content: space-between;
  font-size: 10px;
}
/*关于文章作者的属性*/
.writer-info > image {
  width: 25px;
  height: 25px;
  margin: 5px;
}
.like-info > image {
  width: 15px;
  height: 15px;
  margin: 5px;
}
.dot {
  width: 3px;
  height: 3px;
  background: #000;
  border-radius: 50%;
  margin: 5px;
}