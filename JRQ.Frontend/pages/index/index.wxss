/**index.wxss**/
@import '/style/common.wxss';
@import '/template/searchBar/searchBar.wxss';
@import '/template/adBar/adBar.wxss';

/*本页面css属性*/
/*关于头部导航栏的属性*/
.head {
  width: 80%;
  display: flex;
  justify-content: space-around;
}
.head image {
  width: 35px;
  height: 35px;
}
.head text {
  font-size: 0.8rem;
}
.ad {
  margin: 0 0 10px 0;
}
.module:active {
  background-color: #F0F0F0;
}
.modal__image {
  width: 100%;
}
/*关于文章的属性*/
.articleListWrapper {
  width: 100%; 
  padding: 0 8px;
}
.article {
  margin: 10px 0;
  padding: 5px 10px;
  box-shadow: 0 0 10px #E0E0E0
}
.article-images > image {
  width: 100px;
  height: 100px;
  margin: 2px;
}
.article image {
  width: 100%;
  max-height: 150px;
  box-sizing: border-box;
}
.article-text {
  font-size: 14px;
  margin: 10px 0;
}
.article-info {
  width: 100%;
  justify-content: space-between;
  font-size: 10px;
}
/*关于文章作者的属性*/
.writer-info > image {
  width: 25px;
  height: 25px;
  margin: 5px;
}
.like-info > image {
  width: 15px;
  height: 15px;
  margin: 5px;
}
.b1 {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  background: rgba(0, 0, 0, 0.4);
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
/* 设置展示图片大小 */
.b2 {
  width: 80%;
}
/* 设置展示图片与关闭按钮图片的距离 */
.t_w {
  margin-top: 20rpx;
}
/* 设置关闭按钮图片显示的大小 */
.b2 image {
  width: 100%;
}
/* 设置关闭按钮宽高 */
.t_image {
  width: 60rpx;
  height: 60rpx;
}