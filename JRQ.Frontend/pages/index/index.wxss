/**index.wxss**/
@import '/style/common.wxss';
@import '/template/findBar/searchBar.wxss';
@import '/template/adBar/adBar.wxss';
@import '/template/likeIcon/likeIcon.wxss';

/*本页面css属性*/

/*关于头部导航栏的属性*/

.headWrapper {
  width: 105%;
  padding: 0 30px 10px 30px;
}

.adBar_btn {
  width: 100%;
  padding: 0 30px 10px 30px;
}

/*搜索栏样式*/

.search {
  margin-left: -5%;
  margin-right: 30%;
  width: 110%;
}

.search__keywords {
  line-height: 2rem;
}

/*广告栏样式*/

.ad {
  margin-top: 0;
  margin-bottom: 10px;
 
}

/*导航栏样式*/

.navBar {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-bottom: -10%;
  /* align-items: center;
  float: right;
  box-sizing: content-box; */
}

.navBar__icon {
  margin-left: -25px;
  margin-right: -25px;
  display: block;
  width: 85px;
  height: 45px;
}

/* 关于项目按钮文章属性 */

.articleWrapper_project {
  display: inline-block;
  vertical-align: top;
  width: 100%;
  min-height: 200px;
  padding: 30px 5px 0 5px;
}

.article__decorator_project {
  position: absolute;
  display: flex;
  align-items: center;
  top: -10px;
  width: 70%;
  height: 20px;
  background-color: #6d4809;
  border-radius: 20px;
  padding: 5px 10px;
  box-shadow: 0 0 10px #a0a0a0;
  left: 0;
}

/*关于文章的属性*/

.articleListWrapper {
  width: 100%;
 
  overflow: hidden;
  margin-top: -10%;
}

.articleWrapper {
  display: inline-block;
  vertical-align: top;
  width: 50%;
  min-height: 200px;
  padding: 30px 5px 0 5px;
  
  margin-top: -20%;
}

.article {
  position: relative;
  margin: 10px 0 0 0;
  padding: 10px 10px 5px 10px;
}

.article__decorator {
  position: absolute;
  display: flex;
  align-items: center;
  top: -10px;
  width: 50%;
  height: 20px;
  background-color: #422c05;
  border-radius: 20px;
  padding: 5px 10px;
  box-shadow: 0 0 10px #a0a0a0;
  left: 0;
}

.article__kindName {
  font-size: 0.8rem;
  color: #927912;
  font-weight: bold;
}

.article__banner {
  width: 100%;
  display: block;
  margin: 10px auto;
  box-sizing: border-box;
  border-radius: 0;
  box-shadow: 0 0 20px #e0e0e0;
}

.article__title {
  display: flex;
  align-items: flex-start;
}

.article__titleNum {
  font-size: 1.2rem;
  font-weight: bold;
  color: #eeb83e;
}

.article__titleName {
  line-height: 1.2rem;
  font-size: 1.1rem;
  margin: 0.3rem 0 0 0.2rem;
  font-weight: bold;
  font-family: '宋体';
}

.article__bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.article__date {
  display: block;
  font-size: 10px;
}

.article__like {
  display: flex;
  justify-content: flex-end;
}

/*关于文章作者的属性*/

.writer {
  display: flex;
  align-items: center;
  margin: 5px 0;
}

.writer__face {
  width: 25px;
  height: 25px;
  border-radius: 5px;
}

.writer__name {
  margin: 0 0 0 5px;
  font-size: 0.8rem;
  color: #927912;
}

.b1 {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  background: rgba(0, 0, 0, 0.4);
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  z-index: 1000;
}

/* 设置展示图片大小 */

.b2 {
  width: 80%;
}

/* 设置展示图片与关闭按钮图片的距离 */

.t_w {
  margin-top: 20rpx;
}

/* 设置关闭按钮图片显示的大小 */

.b2 image {
  width: 100%;
}

/* 设置关闭按钮宽高 */

.t_image {
  width: 60rpx;
  height: 60rpx;
}

/* 热门文档——更多 */

.document_more {
  width: 100%;margin-top: 10%;
  
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.document {
  margin-left: 5%;
  font-size: 16px;
  font-weight: bolder;
}

.more {
  font-size: 12px;
  font-weight: bold;
  margin-right: 3%;
 
}
.mores{
  font-size: 12px;
  font-weight: bold;
  margin-right: 5%;
}

/* 热门视频——更多 */

.video_more {
  margin-top: -65%;
  margin-bottom: 20%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  
}

.video {
  margin-left: 5%;
  font-size: 16px;
  font-weight: bolder;
}

/*关于业务卡片的属性*/

.content {
  width: 100%;
  min-height: 500px;
}

.cardWrapper {
  position: relative;
  display: flex;
  justify-content: space-between;
  margin: 5px 10px;
  min-height: 80px;
}

.card__decorator {
  position: absolute;
  top: -10px;
  width: 50%;
  height: 20px;
  background-color: white;
  border-radius: 20px;
  padding: 5px 10px;
  left: -23%;
  display: flex;
  align-items: center;
}

.card__kindName {
  color: #927912;
  font-size: 0.8rem;
  font-weight: bold;
  margin-left: auto;
}

.card__main {
  width: 100%;
  display: flex;
  align-items: center;
  padding: 10px 0 5px 5px;
  background-color: white;
  border-radius: 10px 0 0 10px;
}

.card__face {
  width: 50px;
  height: 50px;
  border-radius: 10%;
}

.card__info {
  width: 80%;
  margin: 5px 5px 5px 10px;
}

.card__title1 {
  display: block;
  text-align: left;
}

.card__title2 {
  display: flex;
  flex-direction: column;
  text-align: left;
}

.doucument_bottom {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.vipImage {
  margin-bottom: 1%;
  margin-left: 2%;
  width: 10%;
  height: 10px;
}

.card__username {
  display: inline-block;
  max-width: 9rem;
  font-size: 0.8rem;
  font-weight: bold;
  color: #040404;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.card__position {
  display: inline-block;
  margin: 0 0 0 5px;
  font-size: 0.5rem;
  color: #a6a6a6;
  max-width: 7rem;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.card__city, .card__company, .card__position {
  display: inline;
  margin: 0 5px 0 0;
  color: #a6a6a6;
}

.card__category {
  width: 15%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 0.5rem;
  border-radius: 0 10px 10px 0;
  padding: 5px;
  text-align: center;
}

.card__category text {
  font-size: 0.8rem;
  color: white;
  font-weight: bold;
}

.card__intro {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  text-align: left;
  font-size: 0.5rem;
  color: #b19114;
}

.summary {
  font-size: 0.7rem;
}

.fees {
  font-size: 0.7rem;
  margin-right: 10px;
}

.vip {
  font-size: 0.7rem;
  color: #eeb83e;
}

.header_view_hide {
  display: none;
}

.header_view_show {
  display: block;
}

.articleListWrapper_document {
  width: 100%;
  
  overflow: hidden;
  margin-top: 1%;
  margin-bottom: 70%;
}

.hot_document {
  display: flex;
  flex-direction: row;
}

.article__image {
  width: 60px;
  height: 60px;
  border-radius: 10%;
  margin-top: 10%;
  
}

.card_document {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 5%;
}

.preview {
  width: 50px;
  height: 20px;
  background-color: rgb(241, 196, 71);
  color: #fff;
  font-size: 8px;
  font-weight: bold;
  /* border-radius: 25%; */
  margin-top: 15%;
  text-align: center;
  overflow: hidden;
}

.content_button {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.document_summary{
  font-size: 12px;
 
}
