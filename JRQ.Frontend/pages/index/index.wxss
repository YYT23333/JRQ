/**index.wxss**/
@import '/style/common.wxss';
@import '/template/searchBar/searchBar.wxss';
@import '/template/adBar/adBar.wxss';

/*本页面css属性*/
/*关于头部导航栏的属性*/
.head {
  width: 80%;
  display: flex;
  justify-content: space-around;
}
.head image {
  width: 35px;
  height: 35px;
}
.head text {
  font-size: 0.8rem;
}
.ad {
  margin: 0 0 10px 0;
}
/*关于文章的属性*/
.article-images > image {
  width: 100px;
  height: 100px;
  margin: 2px;
}
.article image {
  width: 100%;
  max-height: 150px;
  box-sizing: border-box;
}
.article-text {
  font-size: 14px;
  margin: 10px 0;
}
.article-info {
  width: 100%;
  justify-content: space-between;
  font-size: 10px;
}
/*关于文章作者的属性*/
.writer-info > image {
  width: 25px;
  height: 25px;
  margin: 5px;
}
.like-info > image {
  width: 15px;
  height: 15px;
  margin: 5px;
}