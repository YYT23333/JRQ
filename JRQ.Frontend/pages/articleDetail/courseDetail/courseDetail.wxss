/* pages/articleDetail/articleDetail.wxss */
@import '/style/common.wxss';

.banner {
  display: block;
  width: 100%;
  max-height: 200px;
}

.header {
  padding: 10px;
  margin: 10px;
  width: calc(100% - 20px);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.header__title {
  color: #927912;
  font-size: 1rem;
  font-weight: bold;
}

.header__price {
  display: block;
  color: #d62f48;
  font-size: 0.9rem;
  font-weight: bold;
}

.header__discount {
  font-size: 0.8rem;
  color: #947841;
}

.header__update {
  display: inline-block;
  padding: 5px;
  margin: 0 0 0 10px;
  font-size: 0.7rem;
  font-weight: bold;
}

.header__right {
  width: 70px;
  height: 70px;
  text-align: center;
  line-height: 70px;
  font-size: 1rem;
}

.intro {
  width: calc(100% - 20px);
  margin: 10px;
  padding: 10px;
  color: #927912;
}

.intro__title {
  color: #927912;
  font-size: 1rem;
  font-weight: bold;
}

.intro__detail {
  display: block;
  font-size: 0.8rem;
  color: #927912;
}

.course-intro > .detail > text {
  margin: 3px 0;
}

.video {
  width: calc(100% - 20px);
  padding: 10px;
  margin: 10px;
}

.video__title {
  color: #927912;
  font-size: 1rem;
  font-weight: bold;
}

.video__tip {
  color: #927912;
  font-size: 0.8rem;
}

.video__content {
  margin: 10px 0;
  width: 100%;
  box-shadow: 0 0 15px #927912;
}

.purchaseButton {
  margin: 10px;
  width: calc(100% - 20px);
}
