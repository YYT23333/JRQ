/* pages/articleDetail/articleDetail.wxss */
@import '/style/common.wxss';
page {
  background: #efefef;
}
.head {
  width: 100%;
  max-height: 200px;
}
.head > image {
  width: 100%;
  max-height: 200px;
}
.course-head {
  padding: 10px;
  background-color: white;
}
.course-intro {
  margin: 20px 0 0 0;
  padding: 10px;
  background-color: white;
}
.course-intro > .detail > text {
  margin: 3px 0;
}
.course-video {
  margin: 20px 0 0 0;
  padding: 10px;
  background-color: white;
}
.course-video .content video {
  width: 100%;
}
.course-buttons {
  background-color: white;
  padding: 10px 0 0 0;
  width: 100%;
}