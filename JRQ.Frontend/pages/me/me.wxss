/* pages/me/me.wxss */
@import '/style/common.wxss';
/*本页面css属性*/
page {
  background-color: #efefef;
}
.head {
  padding: 10px;
  width: 100%;
}
/*关于发布栏的属性*/
.publisher {
  width: 100%;
  padding: 5px 10px 0 10px;
  background: white;
  justify-content: space-between;
  border: 1px rgba(0, 0, 0, 0.103) solid;
  border-radius: 5px;
}
.publisher-input {
  padding: 3px 0 3px 10px; 
  width: 92%;
  font-size: 0.7rem;
}
.publisher-image {
  padding: 5px;
  margin: 0;
}
.publisher-image image {
  width: 20px;
  height: 20px;
}
.publisher-button {
  padding: 5px 5px 5px 0;
  margin: 0;
}
.publisher-button image {
  width: 20px;
  height: 20px;
}
.publisher-photos {
  width: 100%;
  margin: 0 0 5px 0;
}
.publisher-photo {
  width: 33%;
  height: 100px;
  margin: 2px;
}
.publisher-photo image {
  width: 100%;
  height: 100%;
}
/*关于我的名片的属性*/
.my-card {
  margin: 10px 0 0 0;
  padding: 10px;
  width: 100%;
  background-color: white;
}
.my-card-face {
  margin: 0 20px 0 0;
}
.my-card-face image {
  width: 80px;
  height: 80px;
  border-radius: 5px;
}
.my-card-info text {
  font-size: 0.8rem;
}
.my-card-info-username {
  margin: 0 0 10px 0;
}
.my-card-info-username > text {
  margin: 0 10px 0 0;
  font-size: 0.8rem;
  color:#252D47;
}
.my-card-info-username image {
  width: 15px;
  height: 15px;
}
.my-card-intro {
  font-size: 0.8rem;
}
.my-card-send {
  margin: 10px 0 0 0;
  width: 100%;
  border-radius: 5px;
  background-color: rgb(0, 0, 120);
  color: white;
}
.icons {
  margin: 10px 0 0 0;
  width: 80%;
  display: flex;
  justify-content: space-around;
}
.icons image {
  width: 35px;
  height: 35px;
}
.icons text {
  font-size: 0.6rem;
}
/*关于更多和设置的属性*/
.more, .setting {
  background: white;
  padding: 8px 15px;
  font-size: 0.8rem;
}
.more-item {
  justify-content: space-between;
}
.arrow {
    content: " ";
    height: 6px;
    width: 6px;
    border-width: 2px 2px 0 0;
    border-color: #A1A2A2;
    border-style: solid;
    transform:rotate(45deg);
    margin-top: -4px;
    top: 50%;
    right: 22px;
}
.more-item image {
  width: 20px;
  height: 20px;
}
.more-item > navigator {
  display: flex;
  justify-content: space-between;
}
.setting {
  margin: 30px 0 0 0;
}