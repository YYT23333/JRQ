/* pages/me/me.wxss */
@import '/style/common.wxss';

/*本页面css属性*/

.header {
  padding: 10px;
  width: 100%;
}

/*关于发布栏的属性*/

.publisher {
  width: 100%;
  padding: 5px 10px 5px 10px;
  background: white;
  justify-content: space-between;
  border: 1px rgba(0, 0, 0, 0.103) solid;
  border-radius: 5px;
}

.publisher {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10px;
}

.publisher__text {
  padding: 3px 0 3px 10px;
  font-size: 0.7rem;
}

.publisher__camera {
  width: 20px;
  height: 20px;
}

/*关于我的名片的属性*/

.card {
  display: flex;
  flex-direction: column;
  margin: 10px 0 0 0;
  padding: 10px;
  width: 100%;
  background-color: white;
}

.card__face {
  margin: 0 20px 0 0;
  width: 80px;
  height: 80px;
  border-radius: 5px;
}

.card__main {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.card__info {
  font-size: 0.8rem;
}

.card__detail {
  display: flex;
  align-items: center;
}

.card__detail--wrapper {
  margin: 0 0 10px 0;
}

.card__name {
  display: inline-block;
  font-size: 1rem;
  color: #252d47;
}

.card__medal {
  display: inline-block;
  margin: 0 0 0 5px;
  width: 20px;
  height: 20px;
}

.card__intro {
  font-size: 0.8rem;
}

.card__sendButton {
  margin: 10px 0 0 0;
  width: 100%;
  border-radius: 5px;
}

/*关于更多和设置的属性*/

/*panel*/

.panel {
  width: 100%;
  margin: 10rpx 0 0 0;
}

.panel__more, .panel__setting {
  background: white;
  padding: 1px 15px;
}

.panel__setting {
  margin: 30px 0 0 0;
}

/* navigator*/

.navigator {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 10px 0;
  box-sizing: border-box;
}

.navigator__text {
  font-size: 0.8rem;
}

.navigator__arrow {
  width: 0.6rem;
  height: 0.6rem;
}

/* CSS箭头*/

.arrow {
  content: " ";
  height: 6px;
  width: 6px;
  border-width: 2px 2px 0 0;
  border-color: #a1a2a2;
  border-style: solid;
  transform: rotate(45deg);
  margin-top: -4px;
  top: 50%;
  right: 22px;
}

/*底部弹出层*/

.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}

.commodity_attr_box {
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
  padding-top: 20rpx;
}

.modal {
  padding: 20px 0;
  text-align: center;
}

.modal__button::after {
  border: none;
}

.modal__button {
  background-color: #fff;
  margin: 0;
  border: 0;
  padding: 0;
  line-height: initial;
  border-radius: 0;
}

.modal__left {
  display: inline-block;
  width: 50%;
}

.modal__right {
  display: inline-block;
  width: 50%;
  border-left: 1px gray solid;
}

.modal__image {
  display: block;
  margin: 0 auto;
  width: 40px;
  height: 40px;
}

.modal__text {
  font-size: 0.8rem;
}
