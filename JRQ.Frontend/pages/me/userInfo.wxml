<!--pages/me/userInfo.wxml-->
<view class='content'>
  <view class='userInfo'>
    <view class='left'>
      <image class='writerface' src='{{myInfo.writerface[0]}}'></image>
    </view>

    <view class='center'>
      <view class='name-vip'>
        <text class='username'>{{myInfo.username}}</text>
        <image class='vip' mode='widthFix' src='{{myInfo.writerface[4]}}'></image>
      </view>
      <text class='position card_text'>{{myInfo.position}}</text>
      <text class='company card_text'>{{myInfo.company}}</text>
    </view>

    <view class='right'>
      <image class='vip_up' src='{{myInfo.writerface[1]}}'></image>
      <image class='edit' src='{{myInfo.writerface[2]}}'></image>
    </view>
  </view>

  <view class='label'>
    <view class='label_main' wx:for='{{myInfo.label}}' wx:key='*this'>
      <text class='label_text'>{{item}}</text>
    </view>
  </view>
  <view class='share_card'>
    <button class='card_button'>分享我的名片</button>
  </view>
  <view class='benefit'>
    <view class='home_address'>
      <text class='my_benefit'>我的权益</text>
      <text class='check_benefit'>查看我的特权>></text>
    </view>
    <image class='benefit_card' src='{{myInfo.writerface[3]}}'></image>
    <view class='contact_coin'>
      <view class='get_card'>
        <text class='my_contact'>我的人脉</text>
        <view class='share'>
          <view class='get_num'>
            <text style='font-size:18px;'>5</text>
            <text>收到的名片</text>
          </view>
          <view>
          <text class='slash'>/</text>
          </view>
          
          <view class='mutual'>
            <text style='font-size:18px;'>5</text>
            <text>互持的名片</text>
          </view>

        </view>

      </view>
      <text style='text-align:center;font-size:16px;'>钧融币</text>

    </view>


    <view class='publish'>

      <text>我的发布</text>
    </view>
  </view>
  <!-- 时间轴 -->

  <view class='weui-cell-third'>
    <block wx:for="{{myInfo.axis}}" wx:key="*this">
      <view class='weui-cell-time'>{{item.time}}</view>
      <view class='line-card'>
        <view class='weui-cell-list'>

          <view class='weui-cell-circle'>
          </view>
          <view class='weui-cell-line'>
          </view>
        </view>
        <view class='weui-cell-card'>{{item.event}}</view>
      </view>
    </block>
  </view>



</view>