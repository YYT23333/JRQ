<!--pages/me/pay/pay.wxml-->
<view class='container'>
  <!--金额充值-->
  <form bindsubmit="bindSave">
    <view class="form-box">
      <view class='row-wrap'>
        <view class="label">当前金额</view>
        <view class="label-right">{{price}}</view>
      </view>
      <view class="row-wrap">
        <view class="label">充值金额</view>
        <view class="label-right">
          <input name="amount" class="input" type="digit" placeholder="0.00" />
        </view>
      </view>
    </view>
    <button type="warn" class="save-btn" formType="submit">立即支付</button>
    <button type="default" class="cancel-btn" bindtap="bindCancel">取消</button>
  </form>
</view>