<!--pages/modifyMyCard/modifyMyCard.wxml-->
<view class='container container--color-white'>
  <form bindsubmit='onSave' report-submit='true'>
    <view class='face' catchtap='updateFace'>
      <image class='face__image' src='{{myInfo.face}}'></image>
      <text class='face__text jrq__words'>点击更换头像</text>
    </view>
    <view class='infoListWrapper'>
      <view class='infoList jrq__block'>
        <view class='info'>
          <text class='info__key jrq__words'>姓名</text>
          <input class='info__value' type='text' name='username' value='{{myInfo.username}}'></input>
        </view>
        <view class='div-line'></view>
        <view class='info'>
          <text class='info__key jrq__words'>手机号</text>
          <input class='info__value' type='number' name='phone' value='{{myInfo.phone}}'></input>
        </view>
        <view class='div-line'></view>
        <view class='info'>
          <text class='info__key jrq__words'>Email</text>
          <input class='info__value' type='text' name='email' value='{{myInfo.email}}'></input>
        </view>
        <view class='div-line'></view>
        <view class='info'>
          <text class='info__key jrq__words'>城市</text>
          <input class='info__value' type='text' name='city' value='{{myInfo.city}}'></input>
        </view>
        <view class='div-line'></view>
        <view class='info'>
          <text class='info__key jrq__words'>任职公司</text>
          <input class='info__value' type='text' name='company' value='{{myInfo.company}}'></input>
        </view>
        <view class='div-line'></view>
        <view class='info'>
          <text class='info__key jrq__words'>部门</text>
          <input class='info__value' type='text' name='department' value='{{myInfo.department}}'></input>
        </view>
        <view class='div-line'></view>
        <view class='info'>
          <text class='info__key jrq__words'>职位</text>
          <input class='info__value' type='text' name='position' value='{{myInfo.position}}'></input>
        </view>
        <view class='div-line'></view>
        <view class='info'>
          <text class='info__key jrq__words'>业务标签</text>
          <picker class='info__value' bindchange="bindLabelPickerChange" name="label" value="{{labelIndex}}" range="{{labelArray}}">
            <view class="picker">{{labelArray[labelIndex]}}</view>
          </picker>
        </view>
        <view class='div-line'></view>
        <view class='info'>
          <text class='info__key jrq__words'>个人简介:</text>
          <textarea class='info__value info__textarea' auto-height="true" name='intro' value='{{myInfo.intro}}'></textarea>
        </view>
      </view>
      <button class='jrq__button saveBtn' form-type='submit'>保存并返回</button>
    </view>
  </form>
</view>