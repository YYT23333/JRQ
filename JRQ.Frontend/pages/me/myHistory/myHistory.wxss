/* pages/myHistory/myHistory.wxss */
@import '/style/common.wxss';
@import '/template/articleItem/articleItem.wxss';

/*本页面css属性*/
/*关于我的名片的属性*/
.my-card {
  margin: 10px 0 0 0;
  padding: 10px;
  background-color: white;
}
.my-card-face {
  margin: 0 20px 0 0;
}
.my-card-face image {
  width: 80px;
  height: 80px;
  border-radius: 5px;
}
.my-card-info text {
  font-size: 0.75rem;
}
.my-card-info-username {
  margin: 0 0 10px 0;
}
.my-card-info-username > text {
  margin: 0 10px 0 0;
  font-size:0.8rem;
  color:#252D47;
}
.my-card-info-username image {
  width: 15px;
  height: 15px;
}
.my-card-intro {
  font-size: 0.8rem;
}
.myInfoVisible-button {
  width: 100px;
  margin: 0;
  padding: 0;
  border: 0;
}
/*关于我的联系方式的属性*/
.my-contact {
  background-color: #F5F5F5;
  padding: 10px 0;
  margin: 10px 0 0 0;
}
.my-contact button {
  height: 1.5rem;
  font-size: 0.5rem;
}
.my-contact-info text {
  font-size: 0.5rem;
  color: #252D47;
  margin: 2px 0;
}
.send-my-card {
  margin: 0 10px 10px 10px;
}
.send-my-card button {
  font-size: 0.8rem;
}
/*关于历史发布的属性*/
.blue-block {
  width: 10px;
  height: 20px;
  margin: 0 5px 0 0;
  background-color: #243264;
}
.my-history-title {
  margin: 0 0 10px 0;
}
.my-history-title-word text {
  color: #243264;
  font-size: 0.9rem;
}