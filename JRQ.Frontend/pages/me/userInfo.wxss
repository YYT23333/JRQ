
/* pages/me/userInfo.wxss */
.writerface{
  margin-top: 10%;
  width: 70px;
  height: 70px;
  border-radius: 50%;
}
.userInfo{
  margin: center;
  margin-top: 10%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;

}
.left{
  width: 30%;
  margin-left: 4%;
}
.username{
  font-size: 18px;
  font-weight: bold;
  margin-top: 5%;
  display: block;
  color:black;

}
.vip{
  margin-top: 10%;
  margin-left: 5%;
  width:20%;
  height: 10px;
  
}
.name-vip{
  display: flex;
  flex-direction: row;
   
}
.card_text{
  margin-top: 2%;
  display: block;
  color: #927912;
  font-size: 12px;
}
.center{
   width: 50%;
}

.right{
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  margin-top: 3%;
  width: 20%;
  margin-right: 4%;

}
.vip_up{
  width: 40px;
  height: 15px;

}
.edit{
  width: 20px;
  height: 20px;
  padding: 20px 5px 0 0;
}
.label{
  display: flex;

  flex-direction: row-reverse;
  justify-content: space-around;
  
  margin-left: 30%;
  margin-right: 2%;
 
}
.label_text{
  display: block;
  font-size: 8px;
  margin-top: 2%;
  
  background-color: #1c88ee;
  border-radius: 3px;
  border-width: 25px;
  opacity: 0.3;
}
.share_card{
  margin-top: 5%;
}
.card_button{
  width: 30%;
  border-color:#e9c05f;
  margin-top: 20rpx;
  background-color:#fff;
  color: #e9c05f;
  font-size: 8px;
  border-radius: 5px;
  border: 2px;
  box-shadow: 10px;
  overflow:hidden;

}
.benefit{
   height:60%;
   padding: 10px 25px 0 25px;
}
.benefit_card{
  display: flex;
  width: 100%;
  height: 250rpx;
  border-radius: 10px;
  margin-bottom: 8px;
}
/* 发布 */
.publish{
  font-size: 18px;
  font-weight: bolder;
  margin-bottom: 10px;
}
/* 时间轴 */
