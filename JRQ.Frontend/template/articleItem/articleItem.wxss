/*关于文章的属性*/
.article__image {
  width: 100px;
  height: 100px;
  margin: 2px;
}
.article__content {
  width: 100%;
  justify-content: space-between;
  font-size: 0.8rem;
  margin: 5px 0 10px 0;
}
.article__bottom {
  margin: 5px 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 0.5rem;
}
.like {
  display: flex;
}
.like__num {
  margin: 0 5px 0 0;
}
.like__image {
  width: 15px;
  height: 15px;
}
/*关于文章作者的属性*/
.writer {
  display: flex;
  align-items: center;
  padding: 5px 0 0 0;
}
.writer__face {
  width: 25px;
  height: 25px;
  margin: 0 5px;
  border-radius: 5px;
}
.writer__name {
  font-size: 0.7rem;
}
